<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/transparent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/take_pic"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@drawable/main_item_bg"
        android:gravity="center"
        android:text="@string/take_pic_txt"
        android:textColor="#333333"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/menu_normal_color"/>

    <TextView
        android:id="@+id/take_vedio"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@drawable/main_item_bg"
        android:gravity="center"
        android:text="@string/take_vedio_txt"
        android:textColor="#333333"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/menu_normal_color"/>

    <TextView
        android:id="@+id/take_audio"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@drawable/main_item_bg"
        android:gravity="center"
        android:text="@string/take_audio_txt"
        android:textColor="#333333"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dip"
        android:background="#7F7F7F"/>

    <Button
        android:id="@+id/cancle_btn"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@drawable/main_item_bg"
        android:gravity="center"
        android:text="@string/cancle_txt"
        android:textColor="#929292"
        android:textSize="16sp"/>

</LinearLayout>
